@using HotelAtr.DAL
@model List<Room>

@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}




<section class="room-area pt-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="section-title text-center">
                    <h3>our atr rooms</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellente sque vel volutpat felis, eu condimentum massa. Pellentesque mollis eros vel mattis tempor. Aliquam </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (Room room in Model)
                {

                    <div class="room-list
                         @if (room.Price > 100)
                         {
                             <text> active </text>
                          } ">
                        <div class="row">
                            <div class="col-md-5 col-sm-6">
                                <a href="#"><img src="@room.PathBasePicture" alt=""></a>
                            </div>
                            <div class="col-md-7 col-sm-6">
                                <div class="room-list-text">
                                    <h3>
                                        <a href="/Admin/EditRoom&roomId=@room.RoomId">
                                            @room.Name
                                        </a>
                                    </h3>
                                    <p>@room.Description</p>

                                    <h4>Room Facility</h4>
                                    <div class="room-service">
                                        @*<p>
                                                @foreach(RoomOptions option in room.RoomOptions)
                                                {
                                                   <text> @option.Name, </text>
                                                }
                                            </p>*@
                                        <div class="p-amount">
                                            <span>$@room.Price</span>
                                            <span class="count">Per Night</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-12 fix">
                <div class="pagination-content text-center">
                    <ul class="pagination">
                        <li><a href="#">1</a></li>
                        <li class="active"><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

